<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.jsync.fileshare.ReceivingActivity">


    <com.jsync.fileshare.RadarScanView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/radarScanView"
        android:layout_width="match_parent"
        android:layout_height="420dp" />

    <TextView
        android:text="Waiting for device..."
        android:id="@+id/txt_receive_status"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/radarScanView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Your Ip"
        android:textStyle="bold"
        android:layout_below="@id/txt_receive_status"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
