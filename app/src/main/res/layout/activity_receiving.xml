<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jsync.fileshare.ReceivingActivity">


    <com.jsync.fileshare.SearchSignalView
        android:id="@+id/surface_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <TextView
        android:text="Waiting for device..."
        android:id="@+id/txt_receive_fileName"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/surface_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Your Ip"
        android:textStyle="bold"
        android:layout_below="@id/txt_receive_fileName"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_receive_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_receive_progress"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textStyle="italic"
        android:layout_below="@id/txt_receive_status"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:indeterminate="false"

        android:layout_margin="4dp"
        android:id="@+id/pb_receive_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_receive_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
